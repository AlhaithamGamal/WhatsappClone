<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include

            android:id="@+id/main_page_toolbar"
            layout="@layout/app_bar_layout"></include>


    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/profile_image"
        android:background="@drawable/inputs"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorPrimary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_username"
        android:hint="Enter user name"
        android:textAlignment="center"
        android:inputType="text"
        android:drawableStart="@drawable/edit_profile"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/inputs"
        android:padding="6dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/profile_image"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_username"
        android:id="@+id/set_status"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:drawableStart="@drawable/edit_status"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:hint="hey I am available now"
        android:background="@drawable/inputs"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="15dp"
       />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_status"
            android:id="@+id/set_location"
            android:textAlignment="center"
            android:inputType="textMultiLine"
            android:drawableStart="@drawable/ic_edit_location_black_24dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:hint="hey I am available now"
            android:background="@drawable/inputs"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_location"
            android:id="@+id/set_profession"
            android:textAlignment="center"
            android:inputType="textMultiLine"
            android:drawableStart="@drawable/ic_work_black_24dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:hint="hey I am available now"
            android:background="@drawable/inputs"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_profession"
            android:id="@+id/set_major"
            android:textAlignment="center"
            android:inputType="textMultiLine"
            android:drawableStart="@drawable/edit_status"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:hint="hey I am available now"
            android:background="@drawable/inputs"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="15dp"
            />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_button"
        android:textAlignment="center"

        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buttons"
        android:padding="6dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/set_major"
        android:textColor="@android:color/background_light"
        android:text="Update"
        android:textSize="26sp"
        android:textAllCaps="false"
        />


</RelativeLayout>
    </ScrollView>
</RelativeLayout>